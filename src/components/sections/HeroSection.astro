---
import Card from '../ui/Card.astro';
---

<section class="hero">
  <div class="hero-container">
    <Card class="terminal-card">
      <div class="greeting">
        <span class="greeting-text" data-i18n="hero.greeting"></span>
        <h1 class="name">Enrique Querini</h1>
      </div>

      <div class="terminal-header">
        <span class="prompt">$</span>
        <span class="typing-text" id="typing-text"></span>
        <span class="cursor"></span>
      </div>

      <div class="content">
        <p class="comment">
          <span class="comment-mark">//</span> <span data-i18n="hero.intro.comment"></span>
        </p>

        <p class="text-primary">
          <span data-i18n="hero.intro.p1"></span> <strong data-i18n="hero.intro.p1.bold"></strong> <span data-i18n="hero.intro.p1.rest"></span>
        </p>

        <p class="text-muted" data-i18n="hero.intro.p2">
        </p>

        <div class="divider"></div>

        <p class="text-primary">
          <span class="arrow">â†’</span> <span data-i18n="hero.intro.p3"></span>
        </p>
        <p class="text-muted indent" data-i18n="hero.intro.p4">
        </p>

        <div class="code-block">
          <p>
            <span class="keyword" data-i18n="hero.code.if"></span> (quieres.ver === <span class="string">'<span data-i18n="hero.code.experience"></span>'</span>) {
            <button class="link scroll-btn" data-target="experience" data-i18n="hero.code.experience.link"></button> }
          </p>
          <p>
            <span class="keyword" data-i18n="hero.code.else"></span> (quieres.ver === <span class="string">'<span data-i18n="hero.code.passion"></span>'</span>) {
            <button class="link scroll-btn" data-target="projects" data-i18n="hero.code.projects.link"></button> }
          </p>
        </div>
      </div>
    </Card>

    <button class="scroll-indicator" data-target="experience" aria-label="Scroll to experience">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14m0 0l-7-7m7 7l7-7"/>
      </svg>
    </button>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .hero-container {
    max-width: 56rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .hero :global(.terminal-card) {
    padding: 3rem 2rem;
    font-family: var(--font-mono);
  }

  .greeting {
    margin-bottom: 1.5rem;
  }

  .greeting-text {
    display: block;
    font-size: 1.125rem;
    color: var(--muted-foreground);
    margin-bottom: 0.5rem;
  }

  .name {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1.2;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  .prompt {
    font-size: 0.875rem;
  }

  .typing-text {
    font-weight: 500;
  }

  .cursor {
    display: inline-block;
    width: 0.5rem;
    height: 1.25rem;
    background: var(--primary);
    margin-left: 0.25rem;
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    line-height: 1.75;
  }

  .comment {
    color: var(--muted-foreground);
  }

  .comment-mark {
    color: var(--primary);
  }

  .text-primary {
    color: var(--foreground);
  }

  .text-muted {
    color: var(--muted-foreground);
  }

  .text-primary strong {
    color: var(--primary);
    font-weight: 600;
  }

  .divider {
    height: 1px;
    background: var(--border);
    margin: 1rem 0;
  }

  .arrow {
    color: var(--primary);
  }

  .indent {
    padding-left: 1rem;
  }

  .code-block {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .keyword {
    color: var(--primary);
  }

  .string {
    color: var(--accent);
  }

  .link {
    color: var(--primary);
    margin-left: 0.5rem;
    background: none;
    border: none;
    font: inherit;
    cursor: pointer;
    padding: 0;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: all 0.2s ease;
  }

  .link:hover {
    color: var(--accent);
    text-decoration-thickness: 2px;
    transform: translateY(-1px);
  }

  .scroll-indicator {
    margin: 0 auto;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.3s;
    animation: bounce 2s infinite;
  }

  .scroll-indicator:hover {
    color: var(--accent);
  }

  .scroll-indicator svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @media (min-width: 640px) {
    .hero :global(.terminal-card) {
      padding: 3rem;
    }

    .name {
      font-size: 3rem;
    }
  }
</style>

<script>
  import { updateTranslations } from '../../i18n/client';

  // Initial translations
  updateTranslations();

  // Typing effect
  const typingText = document.getElementById('typing-text');
  const fullText = '> Software Engineer';
  let index = 0;

  function type() {
    if (typingText && index <= fullText.length) {
      typingText.textContent = fullText.slice(0, index);
      index++;
      setTimeout(type, 100);
    }
  }

  type();

  // Smooth scroll for all scroll buttons
  document.querySelectorAll('.scroll-btn, .scroll-indicator').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = (e.currentTarget as HTMLElement).getAttribute('data-target');
      const element = document.getElementById(target || '');
      if (element) {
        element.scrollIntoView({ behavior: 'smooth' });
      }
    });
  });
</script>
