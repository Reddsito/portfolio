---
import ExperienceList from "../ui/ExperienceList.astro";
import TechFilter from "../ui/TechFilter.astro";
---

<section
	id="experience"
	class="experience-section">
	<div class="container">
		<header class="section-header">
			<h2>
				<span class="prompt">$</span>
				<span data-i18n="experience.title">git log --experience</span>
			</h2>
			<p
				class="description"
				data-i18n="experience.description">
				Si prefieres ir directo al grano, aquí está mi trayectoria profesional.
			</p>
		</header>

		<TechFilter />

		<ExperienceList />
	</div>
</section>

<style>
	.experience-section {
		min-height: 100vh;
		padding: 5rem 1rem;
	}

	.container {
		max-width: 64rem;
		margin: 0 auto;
	}

	.section-header {
		margin-bottom: 3rem;
		font-family: var(--font-mono);
	}

	.section-header h2 {
		font-size: 2rem;
		font-weight: 700;
		color: var(--foreground);
		margin-bottom: 1rem;
	}

	.prompt {
		color: var(--primary);
	}

	.description {
		color: var(--muted-foreground);
		font-size: 1.125rem;
		line-height: 1.75;
	}

	.experience-section :global(.experience-list) {
		margin-bottom: 3rem;
	}

	@media (min-width: 640px) {
		.section-header h2 {
			font-size: 2.5rem;
		}
	}
</style>
