---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="controls">
  <!-- Language Toggle -->
  <button
    class="control-btn"
    id="lang-toggle"
    aria-label={t('lang.toggle')}
    title={t('lang.toggle')}
  >
    <span class="lang-text">{lang.toUpperCase()}</span>
  </button>

  <!-- Theme Toggle -->
  <button
    class="control-btn"
    id="theme-toggle"
    aria-label={t('theme.toggle')}
    title={t('theme.toggle')}
  >
    <svg class="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="5"/>
      <line x1="12" y1="1" x2="12" y2="3"/>
      <line x1="12" y1="21" x2="12" y2="23"/>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
      <line x1="1" y1="12" x2="3" y2="12"/>
      <line x1="21" y1="12" x2="23" y2="12"/>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
    </svg>
    <svg class="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
    </svg>
  </button>
</div>

<style>
  .controls {
    position: fixed;
    top: 2rem;
    right: 2rem;
    display: flex;
    gap: 0.75rem;
    z-index: 100;
  }

  .control-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(var(--card-rgb), 0.8);
    backdrop-filter: blur(8px);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--foreground);
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .control-btn:hover {
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  .control-btn:active {
    transform: translateY(0);
  }

  .lang-text {
    font-size: 0.75rem;
  }

  .sun-icon,
  .moon-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  :global(.dark) .sun-icon {
    display: none;
  }

  :global(.light) .moon-icon {
    display: none;
  }

  @media (max-width: 768px) {
    .controls {
      top: 1rem;
      right: 1rem;
    }

    .control-btn {
      width: 2.25rem;
      height: 2.25rem;
    }
  }
</style>

<script>
  // Theme Toggle
  const themeBtn = document.getElementById('theme-toggle');
  const htmlEl = document.documentElement;

  // Load saved theme or default to dark
  const savedTheme = localStorage.getItem('theme') || 'dark';
  htmlEl.classList.add(savedTheme);

  themeBtn?.addEventListener('click', () => {
    const currentTheme = htmlEl.classList.contains('dark') ? 'dark' : 'light';
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

    htmlEl.classList.remove('dark', 'light');
    htmlEl.classList.add(newTheme);
    localStorage.setItem('theme', newTheme);
  });

  // Language Toggle
  const langBtn = document.getElementById('lang-toggle');

  // Load saved language or detect from browser
  const savedLang = localStorage.getItem('lang') || navigator.language.split('-')[0];
  const initialLang = (savedLang === 'en' || savedLang === 'es') ? savedLang : 'es';
  htmlEl.setAttribute('lang', initialLang);

  // Update button text
  const langText = langBtn?.querySelector('.lang-text');
  if (langText) {
    langText.textContent = initialLang.toUpperCase();
  }

  langBtn?.addEventListener('click', () => {
    const currentLang = htmlEl.getAttribute('lang') || 'es';
    const newLang = currentLang === 'es' ? 'en' : 'es';

    // Update HTML lang attribute
    htmlEl.setAttribute('lang', newLang);

    // Save preference
    localStorage.setItem('lang', newLang);

    // Update button text
    if (langText) {
      langText.textContent = newLang.toUpperCase();
    }

    // Dispatch event for components to update
    window.dispatchEvent(new CustomEvent('langchange', { detail: { lang: newLang } }));
  });
</script>
