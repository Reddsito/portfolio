---
import ExperienceList from "../ui/ExperienceList.astro";
import Card from "../ui/Card.astro";
---

<section
	id="experience"
	class="experience-section">
	<div class="container">
		<header class="section-header">
			<h2>
				<span class="prompt">$</span>
				<span data-i18n="experience.title">git log --experience</span>
			</h2>
			<p
				class="description"
				data-i18n="experience.description">
				Si prefieres ir directo al grano, aquí está mi trayectoria profesional.
			</p>
		</header>

		<ExperienceList />

		<Card class="contact-card">
			<p class="contact-prompt">
				<span class="prompt">$</span>
				<span data-i18n="experience.contact.prompt"
					>echo "¿Quieres trabajar juntos?"</span
				>
			</p>
			<div class="contact-links">
				<a
					href="mailto:work@reddsito.dev"
					class="contact-link"
					data-i18n="experience.contact.email"
					>→ Email</a
				>
				<a
					href="https://github.com/reddsito"
					target="_blank"
					rel="noopener noreferrer"
					class="contact-link"
					data-i18n="experience.contact.github"
					>→ GitHub</a
				>
				<a
					href="https://linkedin.com/in/enriquerini12"
					target="_blank"
					rel="noopener noreferrer"
					class="contact-link"
					data-i18n="experience.contact.linkedin"
					>→ LinkedIn</a
				>
			</div>
		</Card>
	</div>
</section>

<style>
	.experience-section {
		min-height: 100vh;
		padding: 5rem 1rem;
	}

	.container {
		max-width: 64rem;
		margin: 0 auto;
	}

	.section-header {
		margin-bottom: 3rem;
		font-family: var(--font-mono);
	}

	.section-header h2 {
		font-size: 2rem;
		font-weight: 700;
		color: var(--foreground);
		margin-bottom: 1rem;
	}

	.prompt {
		color: var(--primary);
	}

	.description {
		color: var(--muted-foreground);
		font-size: 1.125rem;
		line-height: 1.75;
	}

	.experience-section :global(.experience-list) {
		margin-bottom: 3rem;
	}

	.experience-section :global(.contact-card) {
		font-family: var(--font-mono);
		text-align: center;
	}

	.contact-prompt {
		color: var(--muted-foreground);
		margin-bottom: 1rem;
	}

	.contact-links {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1rem;
		font-size: 0.875rem;
	}

	.contact-link {
		color: var(--primary);
		text-decoration: none;
		transition: color var(--transition-base);
	}

	.contact-link:hover {
		color: var(--accent);
	}

	@media (min-width: 640px) {
		.section-header h2 {
			font-size: 2.5rem;
		}
	}
</style>
