---
import Card from './Card.astro';
import Icon from './Icon.astro';
import Tag from './Tag.astro';

interface Props {
  title: string;
  description: string;
  icon: 'server' | 'lock' | 'database' | 'layers' | 'zap' | 'cloud';
  notionUrl?: string;
  tags: string[];
  projectId?: string;
}

const { title, description, icon, notionUrl, tags, projectId } = Astro.props;
---

<a href={projectId ? `/projects/${projectId}` : '#'} class="project-link">
  <Card variant="hover">
    <article class="project-card">
      <header class="card-header">
        <div class="icon-container">
          <Icon name={icon} size="md" />
        </div>
        {notionUrl && notionUrl !== '#' && (
          <a
            href={notionUrl}
            class="external-link"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="View project"
            onclick="event.stopPropagation()"
          >
            <Icon name="external-link" size="sm" />
          </a>
        )}
      </header>

      <div class="card-content">
        <h3>{title}</h3>
        <p>{description}</p>
      </div>

      <div class="tags">
        {tags.map((tag) => <Tag>{tag}</Tag>)}
      </div>
    </article>
  </Card>
</a>

<style>
  .project-link {
    text-decoration: none;
    display: block;
    height: 100%;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  .icon-container {
    padding: 0.75rem;
    background: var(--secondary);
    border-radius: var(--radius-sm);
    color: var(--primary);
  }

  .external-link {
    color: var(--muted-foreground);
    transition: color var(--transition-base);
  }

  .external-link:hover {
    color: var(--primary);
  }

  .card-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--foreground);
    font-family: var(--font-mono);
    margin-bottom: 0.5rem;
  }

  .card-content p {
    color: var(--muted-foreground);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
</style>
